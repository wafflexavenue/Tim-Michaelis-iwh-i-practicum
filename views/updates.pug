doctype html
html 
    head 
        title pageName
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
        style.
            body {
                font-family: Arial, sans-serif;
                text-align: center;
                background-color: #f5f5f5;
            }
            .content {
                display: flex;
                flex-direction: column;
                align-items: center;
                margin-top: 40px;
            }
            .form-container {
                background-color: #ffffff;
                border-radius: 10px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
                padding: 20px;
                width: 50%;
                border: 1px solid black;
                text-align: left;
            }
            form {
                display: flex;
                flex-direction: column;
            }
            label {
                font-weight: bold;
                margin-top: 10px;
            }
            input {
                padding: 8px;
                margin-top: 5px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }
            button {
                margin-top: 15px;
                padding: 10px;
                background-color: red;
                color: white;
                border: none;
                cursor: pointer;
                border-radius: 5px;
            }
            button:hover {
                background-color: darkred;
            }
            a {
                display: block;
                margin-top: 20px;
                text-decoration: none;
                color: blue;
            }
        
    body 
        div.content
            h1 New People Form
            div.form-container
                form(action="/update" method="post")
                    label(for="name") Person name
                    input(type="text" name="name")

                    label(for="nationality") Nationality
                    input(type="text" name="nationality")

                    label(for="age") Age
                    input(type="number" name="age")

                    button(type="submit") Add New Person

            a(href="/") Return to the homepage
